<div class="col-lg-12">
	<h1 class="page-header">
		<%= link_to image_tag("logo.png", height: 38), root_path %>

		<span id="type_right">
		<!-- セッション関係 ログアウト -->
			<% if current_user %>
				<%= link_to 'ログアウト', session_path(current_user.id), method: :delete, :class => "btn btn-outline btn-primary" %>
			<% else %>
		<!-- セッション関係 新規登録 -->
			<button class="btn btn-outline btn-primary" data-toggle="modal" data-target="#signinModal">新規登録</button>
			<div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
					<%= form_for(@user) do |f| %>
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">新規登録</h4>
						</div>
						<div class="modal-body">
							<div class="field">
							<%= f.text_field :name, :class => "form-control", :placeholder => "ID"%><br>
							<%= f.password_field :password, :class => "form-control", :placeholder => "パスワード"%><br>
							<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "パスワード再入力" %>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">キャンセル</button>
							<%= f.submit '登録', :class => "btn btn-primary" %>
						</div>
					<% end %>
					</div>
				</div>
			</div>
	<!-- セッション関係 ログイン -->
			<button class="btn btn-outline btn-primary" data-toggle="modal" data-target="#loginModal">ログイン</button>
			<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
					<%= form_tag sessions_path do %>
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">ログイン</h4>
						</div>
						<div class="modal-body">
							<div class="field">
								<%= text_field_tag :name, params[:name], :class => "form-control", :placeholder => "ID" %><br />
								<%= password_field_tag :password, params[:password], :class => "form-control", :placeholder => "パスワード" %>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">キャンセル</button>
							<%= submit_tag "ログイン", :class => "btn btn-primary" %>
						</div>
					<% end %>
					</div>
				</div>
			</div>
			<% end %>
			<button class="btn btn-outline btn-danger" data-toggle="modal" data-target="#bugreportModal">バグ報告</button>
			<div class="modal fade" id="bugreportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
					<%= form_tag(bug_report_path, remote: true) do %>
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">バグ報告</h4>
						</div>
						<div class="modal-body">
							<div class="field">
								<%= text_area_tag :content, params[:content], :size => "1x5", :class => "form-control", :placeholder => "FC*FC Playで【いつ】【どんな】
								問題が起きたのかを書いてください" %>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">キャンセル</button>
							<%= submit_tag "送信", :class => "btn btn-primary" %>
						</div>
					<% end %>
					</div>
				</div>
			</div>
		</span>
	</h1>
</div>
