<!-- update player size -->
var $player = $("#player");
if ($player.size() == 1){
  $player.css('width', "<%= @window.width %>");
  $player.css('height', "<%= @window.height %>");
  var $player = document.getElementById("player");
  $player.style.maxWidth="<%= @window.width %>px";
  $player.style.maxHeight="<%= @window.height %>px";
}

<!-- notification -->
<% if flash[:toastr] %>
  <% flash[:toastr].each do |type, message| %>
    toastr.<%= type %>("<%= message %>")
  <% end %>
<% end %>
